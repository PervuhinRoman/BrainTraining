<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="seekbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">10dp</item>

        <item name="android:background">@drawable/custom_button_background</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>

    <style name="custom_text">
        <item name="android:textColor">@color/myBlack</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="custom_right_answers">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_right_answers_background</item>
    </style>

    <style name="custom_wrong_answers">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_wrong_answers_background</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        tools:context=".MainActivity">

        <include
            android:id="@+id/included_app_bar"
            layout="@layout/app_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enter_number_of_expressions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/enter_number_of_expressions"
            style="@style/main_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/included_app_bar" />

        <EditText
            android:id="@+id/expressions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:gravity="center"
            android:hint="1 - 50"
            android:inputType="number"
            android:minHeight="48dp"
            android:text=""
            style="@style/main_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/enter_number_of_expressions"
            app:layout_constraintTop_toBottomOf="@+id/included_app_bar" />

        <SeekBar
            android:id="@+id/expressions_count_seekBar"
            style="@style/seekbar_style"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:progressBackgroundTint="@color/myBlack"
            android:progressTint="@color/myBlack"
            android:thumbTint="@color/myBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_number_of_expressions" />

        <ImageView
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numbers_count_seekBar"
            app:srcCompat="@drawable/ic_start_button" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numbers_count_seekBar"
            app:srcCompat="@drawable/ic_play_button" />

        <TextView
            android:id="@+id/enter_numbers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/enter_numbers_count"
            style="@style/main_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expressions_count_seekBar" />

        <EditText
            android:id="@+id/numbers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="1 - 50"
            android:layout_marginTop="40dp"
            android:inputType="number"
            android:minHeight="48dp"
            android:text=""
            style="@style/main_body"
            app:layout_constraintStart_toStartOf="@+id/expressions_count"
            app:layout_constraintTop_toBottomOf="@+id/expressions_count_seekBar" />

        <SeekBar
            android:id="@+id/numbers_count_seekBar"
            style="@style/seekbar_style"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:progressBackgroundTint="@color/myBlack"
            android:progressTint="@color/myBlack"
            android:thumbTint="@color/myBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_numbers_count" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_drawer_nav_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>